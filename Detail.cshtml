@using System.Configuration
@using MySql.Data.MySqlClient;
@{
    Layout = "~/_Layout.cshtml";
    Page.Title = "Detail";
}
@{
    string conString = ConfigurationManager.ConnectionStrings["dbConStr"].ConnectionString;
    MySqlConnection con = new MySqlConnection(conString);
}
@functions
{
    class GerichtModel
    {
        public int ID { get; set; }
        public string Beschreibung { get; set; }
        public int Stock { get; set; }
        public bool Verfuegbar { get; set; }
    }
}
@{
    string qstring = Request.QueryString["id"];
    var G = new GerichtModel{};

    try{
        G.ID = Convert.ToInt32(qstring);
    } catch {
        G.ID = 0;
    }

    try
    {
        con.Open();
        MySqlCommand cmd;
        cmd = con.CreateCommand();
        cmd.CommandText = "SELECT * FROM products Where id like "+G.ID+";";
        MySqlDataReader r = cmd.ExecuteReader();

        while (r.Read())
        {

            G.Beschreibung = r["description"].ToString();
            G.Stock = Convert.ToInt32(r["stock"]);
            G.Verfuegbar = Convert.ToBoolean(r["available"]);
        }
        r.Close();
    }
    catch (Exception e)
    {
        G.Beschreibung = ""+e.Message;
        G.Stock = 0;
        G.Verfuegbar = false;
    }
}
